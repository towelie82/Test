             xmlns:statusBar="clr-namespace:DeveloperSample.Core.Pages.StatusBar;assembly=DeveloperSample.Core"
             x:Class="DeveloperSample.Core.Pages.StatusBar.Cases.StatusBarDarkBackgroundPage"
