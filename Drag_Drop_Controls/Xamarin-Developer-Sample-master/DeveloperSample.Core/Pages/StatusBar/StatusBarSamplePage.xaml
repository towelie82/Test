<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeveloperSample.Core.Pages.StatusBar.StatusBarSamplePage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10"
                         Spacing="10">
                <Button Text="Dark Background"
                        Command="{Binding NavigateToStatusBarDarkBackgroundPage}" />
                <Button Text="Light Background"
                        Command="{Binding NavigateToStatusBarLightBackgroundPage}" />
                <Button Text="Video Background"
                        Command="{Binding NavigateToStatusBarVideoBackgroundPage}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>